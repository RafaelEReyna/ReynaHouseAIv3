<style>
  .about {
    background-color: var(--navy);
    padding: 100px 24px;
  }

  .about__container {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 64px;
  }

  /* Left column */
  .about__content {
    flex: 1 1 55%;
  }

  .about__overline {
    display: block;
    font-family: 'IBM Plex Mono', monospace;
    color: var(--copper);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.75rem;
    margin-bottom: 20px;
  }

  .about__headline {
    font-family: 'Bebas Neue', sans-serif;
    color: var(--white);
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 28px;
  }

  .about__body {
    max-width: 560px;
    margin-bottom: 32px;
  }

  .about__body p {
    font-family: 'Inter', sans-serif;
    color: var(--white);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 14px;
  }

  /* Stat badges */
  .about__badges {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 28px;
  }

  .about__badge {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--white);
    background-color: var(--forest);
    padding: 6px 14px;
    border-radius: 4px;
  }

  /* Social icons */
  .about__socials {
    display: flex;
    gap: 16px;
  }

  .about__socials a {
    color: var(--white);
    transition: color 0.2s ease;
  }

  .about__socials a:hover {
    color: var(--copper);
  }

  /* Right column — photo placeholder */
  .about__photo {
    flex: 0 0 auto;
    width: 400px;
    height: 480px;
    background: linear-gradient(160deg, var(--forest) 0%, var(--navy) 100%);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .about__photo-name {
    font-family: 'Bebas Neue', sans-serif;
    color: var(--copper);
    font-size: 2rem;
  }

  .about__photo-location {
    font-family: 'IBM Plex Mono', monospace;
    color: var(--tan);
    font-size: 0.85rem;
  }

  @media (max-width: 767px) {
    .about__container {
      flex-direction: column;
      gap: 40px;
      text-align: center;
    }

    .about__content {
      flex: 1 1 100%;
    }

    .about__body {
      max-width: 100%;
    }

    .about__badges {
      justify-content: center;
    }

    .about__socials {
      justify-content: center;
    }

    .about__photo {
      width: 100%;
      max-width: 400px;
      height: 360px;
    }
  }
</style>
