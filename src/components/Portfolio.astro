---
// Portfolio component — Phase F
import { Image } from 'astro:assets';
import screenshotVillageHairsmith from '../assets/images/village_hairsmith_hero.jpg';
import screenshotRosaNotary from '../assets/images/rosanotary_hero.jpg';
import screenshotHerMaintenance from '../assets/images/her_maintenance_hero.jpg';
---

<section id="portfolio" class="portfolio" data-animate>
  <div class="portfolio__container">
    <span class="portfolio__overline">OUR WORK</span>

    <h2 class="portfolio__headline">Real Sites. Real Businesses. Real Results.</h2>

    <div class="portfolio__grid">
      <!-- Card 1 — Village Hairsmith -->
      <a href="https://villagehairsmith.com" target="_blank" rel="noopener noreferrer" class="portfolio__card" data-animate style="transition-delay: 0s">
        <div class="portfolio__image-wrap">
          <Image
            src={screenshotVillageHairsmith}
            alt="Village Hairsmith website screenshot"
            width={600}
            height={400}
            loading="lazy"
          />
        </div>
        <div class="portfolio__card-body">
          <span class="portfolio__tag">Landing Page</span>
          <h3 class="portfolio__card-title">Village Hairsmith</h3>
          <p class="portfolio__card-desc">Click-to-call buttons, services listed, Big Bear Lake</p>
        </div>
      </a>

      <!-- Card 2 — Rosa Notary -->
      <a href="https://rosanotary.com" target="_blank" rel="noopener noreferrer" class="portfolio__card" data-animate style="transition-delay: 0.1s">
        <div class="portfolio__image-wrap">
          <Image
            src={screenshotRosaNotary}
            alt="Rosa M. Vaquera-Martinez Notary Public website screenshot"
            width={600}
            height={400}
            loading="lazy"
          />
        </div>
        <div class="portfolio__card-body">
          <span class="portfolio__tag">Professional Services</span>
          <h3 class="portfolio__card-title">Rosa M. Vaquera-Martinez Notary Public</h3>
          <p class="portfolio__card-desc">Services, pricing, legal info, booking form</p>
        </div>
      </a>

      <!-- Card 3 — HER Maintenance -->
      <a href="https://hermaintenance.net" target="_blank" rel="noopener noreferrer" class="portfolio__card" data-animate style="transition-delay: 0.2s">
        <div class="portfolio__image-wrap">
          <Image
            src={screenshotHerMaintenance}
            alt="HER Maintenance website screenshot"
            width={600}
            height={400}
            loading="lazy"
          />
        </div>
        <div class="portfolio__card-body">
          <span class="portfolio__tag">Service Business</span>
          <h3 class="portfolio__card-title">HER Maintenance</h3>
          <p class="portfolio__card-desc">Booking form, lead capture, blog, service areas</p>
        </div>
      </a>

      <!-- Card 4 — DEMO (special treatment) -->
      <div class="portfolio__card portfolio__card--demo" data-animate style="transition-delay: 0.3s">
        <div class="portfolio__image-wrap">
          <img
            src="https://placehold.co/600x400/C9944D/EDEAE0?text=Your+Site+Here"
            alt="Demo website — your business could look like this"
            width="600"
            height="400"
            loading="lazy"
          />
        </div>
        <div class="portfolio__card-body">
          <span class="portfolio__tag portfolio__tag--demo">&#11088; Demo — This Could Be You</span>
          <h3 class="portfolio__card-title portfolio__card-title--demo">Bear Valley Builders — Big Bear, CA</h3>
          <p class="portfolio__card-desc">Built to show what's possible for local GCs</p>
        </div>
      </div>
    </div>

    <div class="portfolio__cta-wrap">
      <p class="portfolio__cta-text">Your business could be next.</p>
      <a href="#contact" class="portfolio__cta-button">Let's Build Yours &rarr;</a>
    </div>
  </div>
</section>

<style>
  .portfolio {
    background-color: #1a1f2e;
    padding: 100px 24px;
  }

  .portfolio__container {
    max-width: 1100px;
    margin: 0 auto;
    text-align: center;
  }

  .portfolio__overline {
    display: block;
    font-family: 'IBM Plex Mono', monospace;
    color: var(--copper);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.75rem;
    margin-bottom: 20px;
  }

  .portfolio__headline {
    font-family: 'Bebas Neue', sans-serif;
    color: var(--white);
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 48px;
  }

  /* 2x2 grid */
  .portfolio__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 48px;
  }

  /* Base card */
  .portfolio__card {
    display: block;
    background: #232a3a;
    border-radius: 10px;
    overflow: hidden;
    text-align: left;
    text-decoration: none;
    color: inherit;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .portfolio__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
  }

  /* Demo card — copper glow */
  .portfolio__card--demo {
    border: 2px solid var(--copper);
    box-shadow: 0 0 24px rgba(201, 148, 77, 0.3);
  }

  .portfolio__card--demo:hover {
    box-shadow: 0 0 32px rgba(201, 148, 77, 0.45);
  }

  .portfolio__image-wrap {
    width: 100%;
    height: 220px;
    overflow: hidden;
  }

  .portfolio__image-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    display: block;
    transition: transform 0.3s ease;
  }

  .portfolio__card:hover .portfolio__image-wrap img {
    transform: scale(1.03);
  }

  .portfolio__card-body {
    padding: 20px 24px 24px;
  }

  /* Tag pill */
  .portfolio__tag {
    display: inline-block;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: var(--copper);
    background: var(--navy);
    border-radius: 4px;
    padding: 4px 10px;
    margin-bottom: 10px;
    letter-spacing: 0.02em;
  }

  .portfolio__tag--demo {
    background: var(--copper);
    color: var(--white);
  }

  .portfolio__card-title {
    font-family: 'Bebas Neue', sans-serif;
    color: var(--white);
    font-size: 1.4rem;
    margin-bottom: 4px;
  }

  .portfolio__card-title--demo {
    color: var(--copper);
  }

  .portfolio__card-desc {
    font-family: 'Inter', sans-serif;
    color: var(--tan);
    font-size: 0.85rem;
    line-height: 1.5;
  }

  /* Below-grid CTA */
  .portfolio__cta-wrap {
    text-align: center;
  }

  .portfolio__cta-text {
    font-family: 'Inter', sans-serif;
    color: var(--white);
    font-style: italic;
    font-size: 1.05rem;
    margin-bottom: 16px;
  }

  .portfolio__cta-button {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 1rem;
    color: var(--white);
    background-color: var(--copper);
    padding: 14px 28px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
  }

  .portfolio__cta-button:hover {
    background-color: #b8843f;
  }

  .portfolio__cta-button:focus-visible {
    outline: 2px solid var(--copper);
    outline-offset: 2px;
  }

  @media (max-width: 767px) {
    .portfolio__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
