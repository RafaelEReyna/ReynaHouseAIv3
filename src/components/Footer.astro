<style>
  .footer {
    background-color: #111111;
    padding: 64px 24px 0;
  }

  .footer__inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr 1fr;
    gap: 48px;
  }

  .footer__logo {
    font-family: 'IBM Plex Mono', monospace;
    color: var(--copper);
    font-size: 1.1rem;
    letter-spacing: 0.05em;
    display: inline-block;
    margin-bottom: 16px;
  }

  .footer__tagline {
    font-family: 'Inter', sans-serif;
    font-style: italic;
    color: var(--tan);
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 12px;
  }

  .footer__copyright {
    font-family: 'Inter', sans-serif;
    color: var(--tan);
    font-size: 0.8rem;
  }

  .footer__heading {
    font-family: 'IBM Plex Mono', monospace;
    color: var(--copper);
    font-size: 0.8rem;
    letter-spacing: 0.12em;
    margin-bottom: 20px;
  }

  .footer__links {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer__links a {
    font-family: 'Inter', sans-serif;
    color: var(--white);
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .footer__links a:hover {
    color: var(--copper);
  }

  .footer__email {
    font-family: 'Inter', sans-serif;
    color: var(--white);
    font-size: 0.9rem;
    display: inline-block;
    margin-bottom: 20px;
    transition: color 0.2s ease;
  }

  .footer__email:hover {
    color: var(--copper);
  }

  .footer__socials {
    display: flex;
    gap: 16px;
    margin-bottom: 20px;
  }

  .footer__socials a {
    color: var(--white);
    transition: color 0.2s ease;
  }

  .footer__socials a:hover {
    color: var(--copper);
  }

  .footer__google-link {
    font-family: 'Inter', sans-serif;
    color: var(--tan);
    font-size: 0.85rem;
    transition: color 0.2s ease;
  }

  .footer__google-link:hover {
    color: var(--copper);
  }

  .footer__bottom {
    margin-top: 48px;
    padding: 20px 0;
    border-top: 1px solid rgba(191, 169, 132, 0.1);
    text-align: center;
  }

  .footer__bottom p {
    font-family: 'Inter', sans-serif;
    color: var(--tan);
    font-size: 0.8rem;
  }

  /* Mobile: stacked single column */
  @media (max-width: 767px) {
    .footer__grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
</style>
